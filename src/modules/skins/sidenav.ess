padding 1rem

&-sublinks,
&-links
  margin-left 0
  padding-left 0
  min-width 10rem

&-sublink,
&-link
  list-style none
  text-decoration none

  &-anchor
    &:after
      border-bottom none

&-link
  margin-bottom 2rem
  &-anchor
    %ui-kit/skins/heading/h8.ess
    color = __.color.black.lighter
    text-transform uppercase

&-sublink
  &-anchor
    font-weight 500
